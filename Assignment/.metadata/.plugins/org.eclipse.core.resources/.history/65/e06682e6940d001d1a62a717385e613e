package pattern;

import java.util.Scanner;

public class Pattern10 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
	    System.out.print("Enter Row:");
	    int r = sc.nextInt();
	    for(int i=1;i<=r;i++)
	    {
	    	for(int j =1; j<=i;j++)
	    	{
	    		System.out.print(j);
	    	}
	    	
	    	for(int k =r-1;k>=i;k--)
	    	{
	    		System.out.print(k);
	    	}
	    	System.out.println();
	    }
	    
        
	}

}
