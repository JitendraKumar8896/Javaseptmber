package array;

public class FindingSpecificElementAndThatIndex {

	void index(int a[], int search) {

		for (int i = 0; i < a.length; i++) {

			if (a[i] == search) {
				System.out.println("element founds:" + a[i]);
				System.out.println("location at :" + i);
				break;

			}
		}
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int search = 55;
		int a[] = { 14, 21, 55, 54, 5, 254,55, 41, 54 };

		FindingSpecificElementAndThatIndex aa = new FindingSpecificElementAndThatIndex();

		aa.index(a, search);

	}

}