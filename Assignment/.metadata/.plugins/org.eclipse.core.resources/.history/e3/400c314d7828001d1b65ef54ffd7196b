package assigment;

public class AverageOfArrys7 {
	
	 public static int average(int[] array) {
	        int sum = 0;
	        for (int val : array)
	            sum += val;
	        return sum / array.length;
	    }
	 public static double average(double[] array1) {
	        double sum = 0.0;
	        for (double val : array1) 
	            sum += val;
	        return sum / array1.length;
	    }

	public static void main(String[] args) {
		// TODO Auto-generated method stub
         int array[] =  {1,2,3,4,5,6} ;
         double array1[] =  {6.0,3.4,6.4,1.2,4.0} ;
       //  AverageOfArrys7 a = new AverageOfArrys7();
         AverageOfArrys7.average(array);
         AverageOfArrys7.average(array1);
         
	}

}
