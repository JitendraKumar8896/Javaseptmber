package pattern;

import java.util.Scanner;

public class Pattern8 {

	public static void main(String[] args) {
		    Scanner sc = new Scanner(System.in);
		    System.out.print("Enter Row:");
		    int r = sc.nextInt();
		    for(int i=1;i<=r;i++)
		    {
		    	for(int j =1; j<=i-1;j++)
		    	{
		    		System.out.print("*");
		    	}
		    	System.out.println();
		    }

	}

}
