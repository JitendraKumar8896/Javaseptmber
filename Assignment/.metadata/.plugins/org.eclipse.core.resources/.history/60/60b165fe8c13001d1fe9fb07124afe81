package classesobjects;

import java.util.Scanner;

public class EmployeeRecords {
	int id, contect;
	String name, dept;
	void setData(int i, String n, String d, int c)
	{
		id =i;
		name = n;
		dept = d;
		contect = c;
	}
	void display()
	{
		System.out.println(id+ " " +name+ " "+dept+ " "+contect );
	}
	 
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter the Id:");
		int id = sc.nextInt();
		System.out.println("Enter the Name:");
		String name = sc.next();
		System.out.println("Enter the Department:");
		String dept = sc.next();
		System.out.println("Enter Contect:");
        int contect = sc.nextInt();
       
        StudentData s1  = new StudentData();
        s1.setData(id, name, dept, contect);
         
        System.out.println("Enter the Id:");
	    id = sc.nextInt();
		System.out.println("Enter the Name:");
	    name = sc.next();
		System.out.println("Enter the Department:");
	    dept = sc.next();
		System.out.println("Enter Contect:");
		contect = sc.nextInt();
       
        StudentData s2  = new StudentData();
        s2.setData(id, name, dept, contect);
        
        System.out.println("Enter the Id:");
	    id = sc.nextInt();
		System.out.println("Enter the Name:");
	    name = sc.next();
		System.out.println("Enter the Department:");
	    dept = sc.next();
		System.out.println("Enter Contect:");
		contect = sc.nextInt();
       
        StudentData s3  = new StudentData();
        s3.setData(id, name, dept, contect);
        
        System.out.println("------Student Details------ ");
        s1.display();
        s2.display();
        s3.display();
	}

}
