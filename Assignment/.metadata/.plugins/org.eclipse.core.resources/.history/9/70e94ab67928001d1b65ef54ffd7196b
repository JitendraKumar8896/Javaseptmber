package arrays;

public class BothArraysAreEquals {
         void equalcheck(int a1[],int a2[])
         {
        	 int cnt = 0;
        	 if(a1.length == a2.length)
        	 {
        		 for(int i=0; i<a1.length;i++)
        		 {
        			 if(a1[i]==a2[i])
        			 {
        				 cnt++;
        			 }
        			 else
        			 {
        				 System.out.println("Element are different not equal");
        				 break;
        			 }
        		 }
        		 if(cnt == a1.length)
        		 {
        			 System.out.println("Both Arrays Are Equals..");
        		 }
        	 }
        	 else
        	 {
        		 System.out.println("Length Different not Equal");
        	 }
         }
	public static void main(String[] args) {
	    
        int a1[] = {2,3,4,8,6,7};
        int a2[] = {2,3,4,5,6,7};
        BothArraysAreEquals a = new BothArraysAreEquals();
        a.equalcheck(a1,a2);
	}

}
